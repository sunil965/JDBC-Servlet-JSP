		alert("Address can't be empty !!");
		return false;
	}
	if(cmp.length==null || cmp.length==" "){
		alert("Company can't be empty !!");
		return false;
	}
	if(age.length==null || age.length==" "){
		alert("Age can't be empty !!");
		return false;
